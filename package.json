{
  "name": "latex-documentation-build",
  "version": "1.0.0",
  "description": "A latex skeleton and build, for seamlessly building out documentation time and time again. ",
  "main": "index.js",
  "scripts": {
    "build": "cd admin && index.html",
    "initial": "pdflatex main.tex",
    "run:razroo-markdown-engine": "node build.js",
    "build:book": "node node_modules/markdown-include/bin/cli.js markdown.json; node build-book.js",
    "build:articles": "node build-articles.js",
    "start": "node build.js",
    "start-linux": "node watcher.js & evince main.pdf",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-pdf": "wr -h"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CharlieGreenman/latex-documentation.git"
  },
  "keywords": [
    "latex"
  ],
  "author": "Charlie Greenman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CharlieGreenman/latex-documentation/issues"
  },
  "homepage": "https://github.com/CharlieGreenman/latex-documentation#readme",
  "dependencies": {
    "@razroo/razroo-markdown-engine": "1.2.9",
    "glob": "^7.1.6",
    "husky": "^4.3.0",
    "mkdirp": "^1.0.4",
    "node-html-parser": "^3.1.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "apollo-link": "^1.2.14",
    "apollo-link-http": "^1.5.17",
    "chokidar": "^2.1.6",
    "glob": "^7.1.4",
    "graphql": "^15.5.0",
    "graphql-tag": "^2.11.0",
    "jest": "^22.4.4",
    "markdown-include": "^0.4.3",
    "node-fetch": "^2.6.1",
    "node-sass": "^4.12.0",
    "sass-true": "^4.0.0",
    "shelljs": "^0.7.8"
  }
}
